/* pages/send/send.wxss */
.send-body{
  width:  702rpx;
  margin:auto;
  overflow: hidden;
}
.header{
  width: 100%;
  height: 100rpx;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 48rpx;
  line-height: 100rpx;
  background: #91ccec;
  color: orangered;
  text-align: center;
}
.info{
  margin-top: 20rpx;
  width: 100%;
  overflow: hidden;
  border:  1rpx dashed #91ccec;
  box-sizing: border-box;
}
.section__title{
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
}
.choose{
  display: inline-block;
}
.info-every{
  background: #91ccec;
  overflow: hidden;
  margin-top:20rpx;
  display: flex;
  align-items: center;
}
.title{
  width: 100%;
  background: wheat;
}
.tell,.input{
  height: 100%;
  line-height: 1;
  display: inline-block;
}
